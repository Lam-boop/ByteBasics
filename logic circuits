  <script>
    function checkAnswer(event) {
      event.preventDefault();
      const selected = document.querySelector('input[name="logicAnswer"]:checked');
      const feedback = document.getElementById('feedback');
      if (!selected) {
        feedback.textContent = "Please choose an answer.";
        feedback.style.color = "#e67e22";
        return;
      }

      const correct = "0"; // 1 AND 1 = 1 ‚Üí NOT 1 = 0

      if (selected.value === correct) {
        feedback.textContent = "‚úÖ Correct! 1 AND 1 is 1, and NOT 1 gives 0.";
        feedback.style.color = "#27ae60";
      } else {
        feedback.textContent = "‚ùå Not quite. 1 AND 1 is 1, and NOT of 1 is 0.";
        feedback.style.color = "#c0392b";
      }
    }
  </script>

